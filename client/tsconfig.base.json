{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@pg/api": ["libs/api/src/index.ts"],
            "@pg/components/auth-modal": ["libs/components/auth-modal/src/index.ts"],
            "@pg/components/modal": ["libs/components/modal/src/index.ts"],
            "@pg/components/user-bar": ["libs/components/user-bar/src/index.ts"],
            "@pg/hooks/fetch": ["libs/hooks/fetch/src/index.ts"],
            "@pg/interfaces": ["../interfaces"],
            "@pg/layouts/main": ["libs/layouts/main/src/index.ts"],
            "@pg/types": ["libs/types/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
